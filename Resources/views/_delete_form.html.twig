<form method="post" action="{{ path('admin_action_delete', {'id': action.id}) }}" 
      onsubmit="return confirm('{% trans %}crud.delete.before{% endtrans %}');">
    
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ action.id) }}">
    <button class="btn  btn-block  btn-danger">
        <i class='{% trans %}crud.delete.icon{% endtrans %}'></i>
        {% trans %}crud.delete.text{% endtrans %}
    </button>
</form>
